<h1><%= translate(:new, :default => "New %{model}", :model => User.model_name.human, :scope => [:railties, :scaffold]) %></h1>

<%= form_for(@user) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :login %><br />
    <%= f.text_field :login %>
  </p>
  <p>
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </p>
  <p>
    <%= f.submit translate(:create, :default => "Create", :scope => [:railties, :scaffold]) %>
  </p>
<% end %>

<%= link_to translate(:back, :default => 'Back', :scope => [:railties, :scaffold]), users_path %>
