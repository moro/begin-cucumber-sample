<h1><%= translate(:listing, :default => "Listing %{model}", :model => User.human_name(:count => @users.size), :count => @users.size, :scope => [:railties, :scaffold]) %></h1>

<table>
  <tr>
    <th><%= User.human_attribute_name('login') %></th>
    <th><%= User.human_attribute_name('email') %></th>
  </tr>

<% for user in @users %>
  <tr>
    <td><%=h user.login %></td>
    <td><%=h user.email %></td>
    <td><%= link_to translate(:show, :default => 'Show', :scope => [:railties, :scaffold]), user %></td>
    <td><%= link_to translate(:edit, :default => 'Edit', :scope => [:railties, :scaffold]), edit_user_path(user) %></td>
    <td><%= link_to translate(:destroy, :default => 'Destroy', :scope => [:railties, :scaffold]), user, :confirm => translate(:confirmation, :default => 'Are you sure?', :scope => [:railties, :scaffold]), :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to translate(:new, :default => "New {{model}}", :model => User.human_name, :scope => [:railties, :scaffold]), new_user_path %>
