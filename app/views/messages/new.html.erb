<h1>New message</h1>

<%= form_for(@message) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :text %><br />
    <%= f.text_field :text %>
  </p>
  <p>
    <%= f.submit t(:create, :default => "Create", :scope => [:railties, :scaffold]) %>
  </p>
<% end %>

<%= link_to 'Back', messages_path %>
