<% i18n = {:scope => [:application]} -%>

<% if current_user.watches?(@user) %>
  <%= t('watching', i18n.merge(:default => 'Watching')) %>
  <%= form_for current_user.watchings.for(@user),
              :html => {:method => :delete} do |f| %>
    <%= submit_tag t('unwatch', i18n.merge(:default => 'Unwatch')) %>
  <% end %>
<% else %>
  <%= t('not_watching', i18n.merge(:default => 'Not watching.')) %>
  <%= form_for current_user.watchings.build(:watchee => @user) do |f| %>
    <%= f.hidden_field :watchee_id %>
    <%= submit_tag t('watch', i18n.merge(:default => 'Watch')) %>
  <% end %>
<% end %>
