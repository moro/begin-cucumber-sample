<h1><%= t(:plz_login, :default => "Please login", :scope => [:application]) %></h1>

<%= form_tag(sessions_url) do %>
  <% i18n_scope = {:scope => [:activerecord, :attributes, :user]} %>
  <p>
    <%= label_tag :login, t(:login, i18n_scope)%><br />
    <%= text_field_tag :login %>
  </p>
  <p>
    <%= label_tag :email, t(:email, i18n_scope) %><br />
    <%= text_field_tag :email %>
  </p>
  <p>
    <%= submit_tag translate(:login, :default => "Login", :scope => [:application]) %>
  </p>
<% end %>
